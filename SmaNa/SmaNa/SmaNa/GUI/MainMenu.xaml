<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SmaNa.GUI.MainMenu"
             xmlns:i18n="clr-namespace:SmaNa.Multilanguage;assembly=SmaNa">
  <StackLayout VerticalOptions="Center" HorizontalOptions="Center">
    <Label Text="{i18n:Translate MainMenuWelcome}" HorizontalTextAlignment="Center" VerticalTextAlignment="Center" TextColor="Black"/>
    <Button Text ="{i18n:Translate MainMenuAppointments}" Clicked="OnAppointmentsClicked" />
    <Button Text ="{i18n:Translate MainMenuOperation}" Clicked="OnOperationClicked"  />
    <Button Text ="{i18n:Translate MainMenuSettings}" Clicked="OnSettingsClicked" />
  </StackLayout>
</ContentPage>