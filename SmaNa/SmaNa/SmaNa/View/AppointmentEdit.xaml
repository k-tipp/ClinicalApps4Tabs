<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SmaNa.View.AppointmentEdit"
             xmlns:i18n="clr-namespace:SmaNa.Multilanguage;assembly=SmaNa">
  <Grid>
    <Grid.RowDefinitions>
      <RowDefinition Height="*" />
      <RowDefinition Height="*" />
      <RowDefinition Height="*" />
      <RowDefinition Height="*" />
      <RowDefinition Height="*" />
      <RowDefinition Height="*" />
      <RowDefinition Height="*" />
      <RowDefinition Height="*" />
      <RowDefinition Height="*" />
      <RowDefinition Height="*" />
    </Grid.RowDefinitions>
    <Grid.ColumnDefinitions>
      <ColumnDefinition Width="1*" />
      <ColumnDefinition Width="29*" />
      <ColumnDefinition Width="70*" />
    </Grid.ColumnDefinitions>
    <Label Grid.Row="0" Grid.Column="1" Grid.ColumnSpan="2" x:Name ="AppointmentTitle" TextColor="Black" VerticalOptions="Center" HorizontalOptions="Start"/>
    <Label Grid.Row="1" Grid.Column="1" Text="{i18n:Translate EditTerminName}" VerticalOptions="Center" HorizontalOptions="Start" TextColor="Black" />
    <Entry Grid.Row="1" Grid.Column="2" x:Name="AppointmentName"  />
    <Label Grid.Row="2" Grid.Column="1" Text="{i18n:Translate EditTerminPeriode}" VerticalOptions="Center" HorizontalOptions="Start" TextColor="Black" />
    <DatePicker Grid.Row="2" Grid.Column="2" Format="MM.yyyy" x:Name="AppointmentPeriode" TextColor="Black"/>
    <Label Grid.Row="3" Grid.Column="1" Text="{i18n:Translate EditTerminDate}" VerticalOptions="Center" HorizontalOptions="Start" TextColor="Black" />
    <DatePicker Grid.Row="3" Grid.Column="2" Format="dd.MM.yyyy hh:mm" x:Name="AppointmentDate" TextColor="Black" />
    <Label Grid.Row="4" Grid.Column="1" Text="{i18n:Translate EditTerminDoctor}" VerticalOptions="Center" HorizontalOptions="Start" TextColor="Black" />
    <Entry Grid.Row="4" Grid.Column="2" x:Name="AppointmentDoctor" />
    <Label Grid.Row="5" Grid.Column="1" Text="{i18n:Translate EditTerminLocation}" VerticalOptions="Center" HorizontalOptions="Start" TextColor="Black" />
    <Entry Grid.Row="5" Grid.Column="2" x:Name="AppointmentLocation" />
    <Label Grid.Row="6" Grid.Column="1" Text="{i18n:Translate EditTerminFixed}" VerticalOptions="Center" HorizontalOptions="Start" TextColor="Black" />
    <Switch Grid.Row="6" Grid.Column="2" x:Name="AppointmentFixed" />
    <Label Grid.Row="7" Grid.Column="1" Text="{i18n:Translate EditTerminRemind}" VerticalOptions="Center" HorizontalOptions="Start" TextColor="Black" />
    <Switch Grid.Row="7" Grid.Column="2" x:Name="AppointmentReminder" VerticalOptions="Start" />
    <Label Grid.Row="8" Grid.Column="1" Text="{i18n:Translate EditTerminDone}" VerticalOptions="Center" HorizontalOptions="Start" TextColor="Black" />
    <Switch Grid.Row="8" Grid.Column="2" x:Name="AppointmentDone" />
  </Grid>
</ContentPage>