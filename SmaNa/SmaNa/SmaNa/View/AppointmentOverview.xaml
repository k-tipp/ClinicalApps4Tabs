<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SmaNa.View.AppointmentOverview"
             xmlns:i18n="clr-namespace:SmaNa.Multilanguage;assembly=SmaNa">
  <ListView x:Name ="AppointmentList" >
    <ListView.ItemTemplate>
      <DataTemplate>
        <ViewCell>
          <StackLayout Orientation="Vertical">
            <Label Text="{Binding GuiFirstLine}" HorizontalTextAlignment="Center" VerticalTextAlignment="Center"
            TextColor="Black" />
            <Label Text="{Binding GuiSecondLine}" HorizontalTextAlignment="Center" VerticalTextAlignment="Center"
            HorizontalOptions="EndAndExpand"
            TextColor="Black" />
          </StackLayout>
        </ViewCell>
      </DataTemplate>
    </ListView.ItemTemplate>
  </ListView>
</ContentPage>